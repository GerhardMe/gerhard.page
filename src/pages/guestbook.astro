---
import Layout from "../layouts/main.astro";
import Title from "../components/Title/Title.astro";
import Navbar from "../components/Navbar/Navbar.astro";
import GuestBook from "../components/GuestBook/GuestBook.astro";
---

<Layout>
  <Navbar />
  <main id="feed">
    <Title title="Guestbook" icon="f1fc" about="Work in progress!" />
    <GuestBook />
  </main>
</Layout>

<style>
  #feed {
    padding-top: 6em;
    padding-bottom: 2em;
    margin: auto;

    max-width: 1100px;
    width: 100%;
  }

  @media (max-width: 1700px) {
    #feed {
      margin-left: 300px;
    }
  }
  @media (max-width: 1420px) {
    #feed {
      margin: 0;
      padding-left: 300px;
      padding-right: 40px;

      max-width: 100%;
    }
  }
  @media (max-width: 1100px) {
    #feed {
      padding-left: 2em;
      padding-right: 2em;
    }
  }
  @media (max-width: 720px) {
    #feed {
      padding-top: 3em;

      padding-left: 1em;
      padding-right: 1em;
    }
  }
</style>
