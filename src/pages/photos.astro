---
import Layout from "../layouts/default.astro";
import Gallery from "../components/Gallery/Gallery.astro";
import Title from "../components/Title/Title.astro";

const mods = import.meta.glob("../assets/gallery/*.{jpg,jpeg,png,webp,avif}", {
    eager: true,
    import: "default",
});

const urls = Object.values(mods);
---

<Layout>
    <Title title="My Photoes" icon="f03e" />
    <br />
    <br />
    <br />
    <br />
    <Gallery images={urls} maxSize={350} rotationRange={20} />
</Layout>
