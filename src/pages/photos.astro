---
import Layout from "../layouts/default.astro";
import Gallery from "../components/Gallery/Gallery.astro";
import Title from "../components/Title/Title.astro";

const mods = import.meta.glob(
    "../assets/photos/**/*.{jpg,jpeg,png,webp,avif}",
    {
        eager: true,
        import: "default",
    },
);

const urls = Object.values(mods);
---

<Layout>
    <Title title="My Photoes" about="Wait a sec..." icon="f03e" />
    <Gallery images={urls} maxSize={350} rotationRange={20} />
</Layout>
