---
import Layout from "../../layouts/default.astro";
import List from "../../components/ObjList/ObjList.astro";
import Movie from "../../components/ObjList/Lists/Movie.astro";
import Title from "../../components/Title/Title.astro";
const modules = import.meta.glob("./list/*.md", { eager: true });
const media = Object.values(modules);
---

<Layout>
  <Title
    title="Movies & shows I like"
    about="A collection of some movies, documentarys and shows I like. Work in progress!"
    icon="f008"
  />
  <List
    media={media}
    groupBy={["director", "year", "genre", "rating", "type"]}
    favorites={true}
    Item={Movie}
  />
</Layout>
