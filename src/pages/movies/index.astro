---
import Layout from "../../layouts/default.astro";
import IndexList from "../../components/IndexList/Groups.astro";
import List from "../../components/IndexList/Lists/Movies.astro";
import Title from "../../components/Title/Title.astro";
const modules = import.meta.glob("./*.md", { eager: true });
const media = Object.values(modules);
---

<Layout>
  <Title
    title="Movies I like"
    about="Here i ... and a bit of sssdjkad. enjoy!"
    icon="f008"
  />
  <IndexList
    media={media}
    groupBy={["director", "year", "genre", "rating"]}
    favorites={true}
    List={List}
  />
</Layout>
