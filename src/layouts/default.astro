---
import Layout from "./main.astro";
import Navbar from "../components/Navbar/Navbar.astro";
---

<Layout>
  <Navbar />
  <main class="feed">
    <slot />
  </main>
</Layout>

<!-- ######################## CSS ######################## -->

<style>
  .feed {
    padding-top: 6em;
    padding-bottom: 2em;
    margin: auto;

    position: relative;
    height: 100%;
    max-width: 720px;
    width: 100%;
  }

  @media (max-width: 1300px) {
    .feed {
      margin-left: 280px;
    }
  }
  @media (max-width: 1100px) {
    .feed {
      margin-left: 0px;
      margin-right: 90px;
      float: right;
    }
  }
  @media (max-width: 900px) {
    .feed {
      float: none;

      margin-right: auto;
      margin-left: auto;
    }
  }
</style>
