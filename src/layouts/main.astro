---
import "./global.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Writings, projects, and curiosities. Welcome to my page!"
    />
    <link rel="icon" type="image/png+xml" href="/favicon.png" />
  </head>
  <body transition:persist="wallpaper">
    <slot />
  </body>
</html>

<!-- ######################## CSS ######################## -->

<style>
  body {
    font-family: "Fira Sans", sans;
    line-height: 1.3;
    font-size: 18px;

    margin: 0px;
    padding: 0px;
    background-color: var(--color-bg);
    color: var(--color-text);

    background-image: url(/wallpapers/textureLight.png);
    background-repeat: repeat;
    background-size: 400px;

    background-attachment: fixed;
  }
</style>

<style is:inline>
  :root.dark body {
    background-image: none;
  }
</style>
