---
import { Image } from "astro:assets";
import Layout from "./default.astro";

const { frontmatter } = Astro.props;

// Import all cover images
const images = import.meta.glob(
  "/src/assets/covers/*.{png,jpg,jpeg,webp,avif}",
  { eager: true }
);

// Match cover filename to imported image
const coverFilename = frontmatter.cover;
const coverKey = coverFilename ? `/src/assets/covers/${coverFilename}` : null;
const coverImage =
  coverKey && images[coverKey] ? images[coverKey].default : null;

const fullStars = "★".repeat(frontmatter.rating || 0);
const emptyStars = "☆".repeat(5 - (frontmatter.rating || 0));

// Create Goodreads link from ISBN (prefer ISBN-13)
const goodreadsLink = frontmatter.isbn
  ? `https://www.goodreads.com/book/isbn/${frontmatter.isbn}`
  : null;
---

<Layout>
  <article class="size">
    <div class="top">
      <header>
        <h1 class="title">{frontmatter.title}</h1>

        <div class="row">
          <span class="author">
            by {frontmatter.author}
          </span>
          <span class="stars">
            {fullStars}{emptyStars}
          </span>
        </div>

        <div class="blurb">{frontmatter.blurb}</div>
      </header>

      <div class="right">
        <Image
          src={coverImage}
          alt={`Cover of ${frontmatter.title}`}
          width={200}
          class="cover"
        />

        <div class="info">
          <p class="read">
            Read: {new Date(frontmatter.read).toLocaleDateString("en-GB")}
          </p>
          <p class="year">Published: {frontmatter.year}</p>
          <a class="isbn">ISBN goodreads link</a>
        </div>
      </div>
    </div>

    <div class="content">
      <slot />
    </div>
  </article>
</Layout>

<style>
  .size {
    margin: auto;
    padding: 1em 0.5em;
    padding-bottom: 5em;
  }

  .top {
    display: flex;
    gap: 1em;

    header {
      flex-grow: 10;

      margin-bottom: 2rem;
      padding-bottom: 1.5rem;

      .title {
        font-family: "Times New Roman", Times, serif;
        border-bottom: 1px solid var(--color-backdrop);
      }
    }

    .row {
      .author {
        font-size: 1.1em;
        color: var(--color-text-blockquote);

        margin-right: 0.5em;
      }

      .stars {
        letter-spacing: 0.05em;
        font-size: 1.1rem;
        color: var(--color-gold);
        text-shadow: 0 0 0.1em var(--color-shadow);
      }

      padding-bottom: 1em;
    }

    .blurb {
      color: var(--color-text-blockquote);

      text-align: justify;
      margin-right: 0.5em;
    }

    .right {
      width: 200px;

      .cover {
        border-radius: 0.2em;
        box-shadow: 0 0 8px var(--color-shadow);
      }

      .info {
        padding-top: 0.5em;

        .isbn {
          color: var(--color-accent);
          text-decoration: none;
          cursor: pointer;

          &:hover {
            text-decoration: underline;
          }
        }
      }
    }
  }

  .content {
    :global(h1, h2, h3) {
      margin-bottom: 0.5rem;
      font-family: "Times New Roman", Times, serif;

      font-weight: bold;
    }

    :global(p) {
      margin-bottom: 1em;
    }
  }
</style>
