---
import { Image } from "astro:assets";
import Layout from "./default.astro";

const parentPath = Astro.url.pathname.replace(/\/[^/]+\/[^/]+\/?$/, "/");
const { frontmatter } = Astro.props;

// Import all cover images
const images = import.meta.glob(
  "/src/assets/covers/*.{png,jpg,jpeg,webp,avif}",
  { eager: true }
);

// Match cover filename to imported image
const coverFilename = frontmatter.cover;
const coverKey = coverFilename ? `/src/assets/covers/${coverFilename}` : null;
const coverImage =
  coverKey && images[coverKey] ? images[coverKey].default : null;

const fullStars = "★".repeat(frontmatter.rating || 0);
const emptyStars = "☆".repeat(5 - (frontmatter.rating || 0));

// Create Goodreads link from ISBN (prefer ISBN-13)
const goodreadsLink = frontmatter.isbn
  ? `https://www.goodreads.com/book/isbn/${frontmatter.isbn}`
  : null;
---

<Layout>
  <article class="size">
    <div class="top">
      <header>
        <h1 class="title">{frontmatter.title}</h1>

        <div class="row">
          <div class="gap">
            <span class="author">
              by {frontmatter.author}
            </span>
            <span class="stars">
              {fullStars}{emptyStars}
            </span>
          </div>
          <a class="backBtn" href={parentPath}>back</a>
        </div>

        <div class="blurb">{frontmatter.blurb}</div>
      </header>

      <div class="right">
        {coverImage ? (
          <Image
            src={coverImage}
            alt={`Cover of ${frontmatter.title}`}
            width={200}
            class="cover"
          />
        ) : (
          <div class="cover cover-placeholder"></div>
        )}

        <div class="info">
          <p class="read">
            Read: {new Date(frontmatter.read).toLocaleDateString("en-GB")}
          </p>
          <p class="year">Published: {frontmatter.year}</p>
          <a
            href={goodreadsLink}
            target="_blank"
            rel="noopener noreferrer"
            class="isbn"
          >
            ISBN: {frontmatter.isbn}
          </a>
        </div>
      </div>
    </div>

    <div class="content">
      <slot />
      <a class="backBtn" href={parentPath}>back</a>
    </div>
  </article>
</Layout>

<style>
  .size {
    margin: auto;
    padding: 2em 0.5em;
    padding-bottom: 5em;
  }

  .top {
    display: flex;
    gap: 1em;
    padding-bottom: 1.5em;
    margin-bottom: 2em;
    border-bottom: 1px solid var(--color-backdrop);
  }

  .title {
    font-family: "Times New Roman", Times, serif;
    font-size: 2em;
    margin-bottom: 0.5em;
    line-height: 1.2;
    border-bottom: 1px solid var(--color-backdrop);
  }

  .row {
    display: flex;
    justify-content: space-between;
    align-items: baseline;

    .gap {
      display: flex;
      gap: 1em;
      align-items: baseline;
    }

    .backBtn {
      margin-right: 1em;
    }
    padding-bottom: 1em;
  }

  .author {
    font-size: 1.15em;
    color: var(--color-text-blockquote);
  }

  .stars {
    letter-spacing: 0.05em;
    font-size: 1em;
    color: var(--color-gold);
    text-shadow: 0 0 0.1em var(--color-shadow);
  }

  .blurb {
    color: var(--color-text-blockquote);
    text-align: justify;
    font-size: 0.95em;
    line-height: 1.75;

    margin-right: 0.5em;
  }

  .right {
    flex-shrink: 0;
    width: 200px;
  }

  .cover {
    width: 100%;
    height: auto;
    border-radius: 0.3em;
    box-shadow: 0 4px 12px var(--color-shadow);
  }

  .cover-placeholder {
    width: 200px;
    height: 300px;
    background: var(--color-backdrop);
  }

  .info {
    padding-top: 0.75em;
    color: var(--color-bg-dark);
    font-size: 0.9em;
    line-height: 1.7;
    padding-left: 0.2em;
    margin-bottom: -0.9em;
    font-family: "Times New Roman", Times, serif;
  }

  .isbn {
    color: var(--color-accent);
  }

  .isbn:hover {
    text-decoration: underline;
  }

  .backBtn {
    font-family: "Times New Roman", Times, serif;

    cursor: pointer;
    color: var(--color-text-link);
    font-size: 0.9em;

    &:hover {
      text-decoration: underline;
    }
  }

  .content {
    line-height: 1.75;

    :global(h1),
    :global(h2),
    :global(h3) {
      margin-top: 1.5em;
      margin-bottom: 0.75em;
      font-family: "Times New Roman", Times, serif;
      font-weight: bold;
      line-height: 1.3;
    }

    :global(p) {
      margin-bottom: 1em;
      line-height: 1.75;
      color: var(--color-text-blockquote);
      font-size: 0.95em;
    }

    :global(a) {
      color: var(--color-text-link);
    }

    :global(a:hover) {
      text-decoration: underline;
    }

    .backBtn {
      display: none;
    }
  }
  @media (max-width: 650px) {
    .top {
      flex-direction: column;
      gap: 1.5em;
    }

    .right {
      margin: auto;
    }

    .content .backBtn {
      display: block;
      width: fit-content;
      margin: auto;
    }
  }
</style>
