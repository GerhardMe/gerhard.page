---
interface Props {
    title: string;
    about?: string;
    icon?: string;
}

const { title, about, icon } = Astro.props;
---

<div class="titleBox">
    <h1 class="title">
        {title}
        {icon && <span class="icon">&#x{icon};</span>}
    </h1>
    <p class="about">{about}</p>
</div>

<!-- ######################## CSS ######################## -->

<style>
    .titleBox {
        padding: 1em;
        padding-bottom: 6em;

        .title {
            text-align: center;
            color: var(--color-primary);
            border-bottom: 1px solid var(--color-bg-dark);
            padding-bottom: 0.3em;
        }

        .about {
            margin-top: 1em;
            color: var(--color-text-blockquote);
        }
    }
</style>
