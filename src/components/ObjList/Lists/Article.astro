---
const { post } = Astro.props;

function fm(p: any) {
  return p.frontmatter ?? p.data ?? {};
}

function fmtDate(d: string | Date) {
  try {
    return new Date(d).toLocaleDateString("en-GB");
  } catch {
    return String(d ?? "");
  }
}

const f = fm(post);

// Get word count from the markdown body
const body = post.rawContent?.() ?? post.body ?? "";
const wordCount = body.split(/\s+/).filter((w: string) => w.length > 0).length;
---

<a href={post.url} class="item">
  <div class="left">
    <img class="img" src={f.image} loading="lazy" />
    <div class="info">
      <div class="title">{f.title ?? post.slug ?? post.id}</div>
      <div class="category">{f.category}</div>
      <div class="words">{wordCount} words</div>
    </div>
  </div>
  <div class="right">
    <div class="date">{fmtDate(f.date)}</div>
  </div>
</a>

<style>
  .item {
    display: flex;
    justify-content: space-between;
    padding: 0.5em;
  }

  .item:hover .title {
    text-decoration: underline;
  }

  .left {
    display: flex;
  }

  .right {
    display: flex;
    flex-direction: column;
    padding-left: 0.5em;
    padding-right: 0.5em;
  }

  .img {
    min-height: 82px;
    width: 150px;
    border-radius: 0.2em;
    background: var(--color-bg-dark);
    box-shadow: 0 0 0.2em var(--color-shadow);
  }

  .item:hover .img {
    border: 2px solid var(--color-accent);
    padding: -2px;
  }

  .info {
    display: flex;
    flex-direction: column;
    padding-left: 0.5em;
    padding-right: 0.5em;
  }

  .title {
    font-family: "Times New Roman", Times, serif;
    font-size: 1.1em;
    font-weight: bold;
    color: var(--color-accent);
  }

  .category {
    font-size: 0.9em;
  }

  .words {
    font-size: 0.9em;
    color: var(--color-bg-dark);
  }

  .date {
    font-family: "Times New Roman", Times, serif;
    font-size: 0.9em;
    color: var(--color-bg-dark);
  }
</style>
