---
const { post } = Astro.props;

function fm(p: any) {
  return p.frontmatter ?? p.data ?? {};
}

function fmtDate(d: string | Date) {
  try {
    return new Date(d).toLocaleDateString("en-GB");
  } catch {
    return String(d ?? "");
  }
}

const f = fm(post);

// Get word count and calculate reading time (average 200 words per minute)
const body = post.rawContent?.() ?? post.body ?? "";
const wordCount = body.split(/\s+/).filter((w: string) => w.length > 0).length;
const readingTime = Math.max(1, Math.round(wordCount / 200));
---

<a href={post.url} class="item">
  <div class="imgBox">
    <img class="img" src={f.image} loading="lazy" />
  </div>
  <div class="info">
    <div class="widthBox">
      <div class="title">{f.title ?? post.slug ?? post.id}</div>
      <div class="date">{fmtDate(f.date)}</div>
    </div>
    <div class="category">{f.category}</div>
    <div class="read">({readingTime} min read)</div>
  </div>
</a>

<style>
  .item {
    display: flex;
    justify-content: space-between;
    padding: 0.5em;

    overflow: hidden;
  }

  .item:hover .title {
    text-decoration: underline;
  }

  .info {
    display: flex;
    flex-direction: column;
    padding-left: 0.5em;
    padding-right: 0.5em;

    width: 100%;
  }

  .widthBox {
    display: flex;
    justify-content: space-between;
  }

  @media (max-width: 500px) {
    .widthBox {
      flex-direction: column;
    }

    .date {
      color: var(--color-text) !important;
      transform: translateY(0);
    }
  }

  .img {
    width: 13em;
    max-width: 43vw;
    min-height: 4em;
    height: auto;
    object-fit: cover;

    border-radius: 0.3em;
    background: var(--color-bg-dark);
    box-shadow: 0 0 0.2em var(--color-shadow);
  }

  .item:hover .img {
    border: 2px solid var(--color-accent);
    padding: -2px;
  }

  .title {
    font-family: "Times New Roman", Times, serif;
    font-size: 1.1em;
    font-weight: bold;
    color: var(--color-accent);

    margin-right: 1em;
  }

  .category {
    font-size: 0.9em;
  }

  .read {
    font-size: 0.9em;
    color: var(--color-bg-dark);
  }

  .date {
    font-family: "Times New Roman", Times, serif;
    font-size: 0.9em;
    color: var(--color-bg-dark);

    transform: translateY(0.25em);
  }
</style>
