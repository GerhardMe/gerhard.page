---
const { posts = [], title = "" } = Astro.props;

function fmtDate(d: string | Date) {
    try {
        return new Date(d).toLocaleDateString("en-GB");
    } catch {
        return String(d ?? "");
    }
}
---

<ul class="list">
    {title && <h3 class="title">{title}</h3>}
    {
        posts.map((post: any) => (
            <li class="element">
                <a href={post.url}>
                    {post.frontmatter?.title ?? post.slug ?? post.id}
                    <span class="category">- {post.frontmatter?.category}</span>
                </a>
                <p class="date">{fmtDate(post.frontmatter?.date)}</p>
            </li>
        ))
    }
</ul>

<!-- ######################## CSS ######################## -->

<style>
    .list {
        margin: 0em 0.5em 5em 0.5em;

        .title {
            border-bottom: 1px solid var(--color-backdrop);
            padding-bottom: 0.5em;
        }

        .element {
            display: flex;
            justify-content: space-between;

            padding: 0.5em;
            border-bottom: 1px solid var(--color-backdrop);
        }
        .element:last-child {
            border-bottom: none;
        }

        .element:has(a:hover) {
            border-bottom: 1px solid var(--color-bg-dark);
        }

        a {
            color: var(--color-text-link);

            &:hover {
                font-weight: bold;
            }
        }

        .date {
            padding-left: 2em;
            display: flex;
            flex-direction: column;
            justify-content: space-around;
        }

        .category {
            color: var(--color-bg-dark);
            margin-left: 0.2em;
        }
    }
</style>
