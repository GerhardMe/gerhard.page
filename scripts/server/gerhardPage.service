[Unit]
Description=Astro static site - gerhard.page
After=network.target

[Service]
Type=simple
User=server
Group=server
WorkingDirectory=/home/server/gerhardPage/gerhard.page
ExecStart=/usr/bin/pnpm exec serve dist --listen tcp://0.0.0.0:4321
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target